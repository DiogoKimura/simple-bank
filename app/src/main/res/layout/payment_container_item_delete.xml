<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payment_container_item_delete_layout"
    android:background="@drawable/ds_background_green_outline_radius_m"
    android:elevation="@dimen/ds_thickness_s"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/payment_container_item_delete_outline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/ds_thickness_xs"
        android:background="@drawable/ds_background_green_fill_radius_m"
        android:backgroundTint="@color/ds_color_surface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/payment_container_item_delete_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ds_spacing_xs"
        android:src="@drawable/ds_icon_circle_outlined"
        android:tint="@color/ds_color_status_red"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/payment_container_item_delete_label"
        app:layout_constraintEnd_toStartOf="@id/payment_container_item_cancel"
        app:layout_constraintStart_toStartOf="@id/payment_container_item_delete_label"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/payment_container_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ds_spacing_xs"
        android:src="@drawable/ds_icon_delete"
        android:tint="@color/ds_color_status_red"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/payment_container_item_delete_label"
        app:layout_constraintEnd_toStartOf="@id/payment_container_item_cancel"
        app:layout_constraintStart_toStartOf="@id/payment_container_item_delete_label"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/payment_container_item_cancel_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ds_spacing_xs"
        android:src="@drawable/ds_icon_circle_outlined"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/payment_container_item_delete_label"
        app:layout_constraintEnd_toEndOf="@id/payment_container_item_delete_label"
        app:layout_constraintStart_toEndOf="@id/payment_container_item_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/payment_container_item_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ds_spacing_xs"
        android:src="@drawable/ds_icon_close"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/payment_container_item_delete_label"
        app:layout_constraintEnd_toEndOf="@id/payment_container_item_delete_label"
        app:layout_constraintStart_toEndOf="@id/payment_container_item_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/payment_container_item_delete_label"
        style="@style/SimpleBankTheme.TextAppearance.RegularM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/ds_spacing_xs"
        android:paddingBottom="@dimen/ds_spacing_xs"
        android:text="@string/payment_summary_delete_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_container_item_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>